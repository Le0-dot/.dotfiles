# i3blocks config file
#
# Please see man i3blocks for a complete reference!
# The man page is also hosted at http://vivien.github.io/i3blocks
#
# List of valid properties:
#
# align
# color
# command
# full_text
# instance
# interval
# label
# min_width
# name
# separator
# separator_block_width
# short_text
# signal
# urgent

# Global properties
#
command=$BLOCK_NAME/$BLOCK_NAME
separator_block_width=15
markup=none

# Network interface monitoring
#
[iface]
label= 
color=#00FF00
interval=10
separator=false
display_wifi_name=1

[iface]
color=#00FF00
interval=10

# Volume via pulseaudio
#
[volume-pulseaudio]
LONG_FORMAT="${SYMB}${VOL}"
interval=once
signal=1

# Screen brightness control
#
[my_brightness]
label=☀ 
interval=once
signal=2

# Battery usage
#
[battery2]
markup=pango
interval=5

# Memory usage
#
[memory]
label= 
interval=10

# Disk usage
#
[disk]
label= 
DIR=/
interval=10

# Keyboard layout
#
[kbdd_layout]
label= 
interval=persist

# Time
#
[time]
command=date '+%Y-%m-%d %H:%M:%S'
interval=1

