#!/bin/bash

echo -e "Please enter which packages you want to install [a]ll/[m]inimum: \c"
read input

if [[ "$input" == "a" ]] || [[ "$input" == "all" ]]; then

    sudo pacman -S $(awk '{ 
    if ($2 == "pac")
	print $1;
    }' packages.txt)

    yay -S -a --nocleanmenu --nodiffmenu --noeditmenu --noupgrademenu $(awk '{ 
    if ($2 == "aur")
	print $1;
    }' packages.txt)

elif [[ "$input" == "m" ]] || [[ "$input" == "minimum" ]]; then

    sudo pacman -S $(awk '{
    if ($2 == "pac" && $3 == "min") 
	print $1; 
    }' packages.txt)

    yay -S -a --nocleanmenu --nodiffmenu --noeditmenu --noupgrademenu $(awk '{ 
    if ($2 == "aur" && $3 == "min")
	print $1;
    }' packages.txt)

else
    echo "Invalid input"
    exit -1
fi
