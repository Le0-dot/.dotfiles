echo -e "Please enter your email: \c"
read email

ssh-keygen -t ed25519 -C "$email" -f ~/.ssh/id_ed25519

xclip -sel clip < ~/.ssh/id_ed25519.pub
echo "Public key was copied to clipboard. Please login to github, go to settings -> SSH and GPG keys and paste a new key."
echo -e "Press enter to open github in firefox\c"
read input
firefox "https://github.com/login"

ssh -T git@github.com
