#!/bin/bash

dmenu="dmenu"

if [ $# -eq 1 ]; then
    dmenu="$1"
fi

declare -a option_list=(
    "Lock"
    "Exit"
    "Shutdown"
    "Reboot"
    "Suspend"
    "Quit"
)

option=$(printf '%s\n' "${option_list[@]}" | "$dmenu") || exit 1

declare -a MANAGERS
while IFS= read -r manager
do
    MANAGERS+=("${manager,,}")
done < <(grep 'Name=' /usr/share/xsessions/*.desktop | cut -d'=' -f2)


case $option in
    "Lock")
	~/.local/bin/lock;;
    "Exit")
	loginctl terminate-session ${XDG_SESSION_ID-};;
    "Suspend")
	systemctl suspend;;
    "Reboot")
	systemctl reboot;;
    "Shutdown")
	systemctl poweroff;;
    "Quit" | *)
	;;
esac
